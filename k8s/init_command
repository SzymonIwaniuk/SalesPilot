kubectl apply -f sp-deployment.yaml,sp-service.yaml,sp-configmap.yaml,ps-deployment.yaml,ps-service.yaml,postgres-configmap.yaml,psql-pv.yaml,psql-claim.yaml

# list all services with their node ports
minikube service list

# restart pod deployment to pick new image
kubectl rollout restart deployment/<pod>

# check status of pod
kubectl get pods -l app=salespilot

# list all services
kubectl get services

# get ip of minikube
minikube ip

# run tests inside the api pod
kubectl exec <pod-name> -- pytest 